<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context="com.alex.bagofwords.MainMenu">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/mainMenu"
            android:background="@color/colorAccent"
            android:text="@string/mainMain"
            android:textColor="#FFFFFF"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".333" />


        <Button
            android:text="Leaderboard"
            android:id="@+id/leaderBoard"
            android:background="@color/colorPrimary"
            android:textColor="#FFFFFF"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".333" />

        <Button
            android:text="@string/settings"
            android:id="@+id/settings"
            android:background="@color/colorPrimary"
            android:textColor="#FFFFFF"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".333" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Details"
            android:textStyle="bold"
            android:textSize="30dp"
            android:paddingTop="20dp"
            android:inputType="textEmailAddress"
            android:gravity="center_horizontal"
            android:paddingBottom="40dp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/usernameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/usernameText"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Username:"
            android:textAppearance="?android:textAppearanceLarge"
            android:gravity="center" />

        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/usernameText"
            android:textStyle="bold"
            android:textAppearance="?android:textAppearanceLarge"
            android:gravity="center"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/nameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/nameText"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Name:"
            android:textAppearance="?android:textAppearanceLarge"
            android:gravity="center" />

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/nameText"
            android:text=""
            android:textStyle="bold"
            android:textAppearance="?android:textAppearanceLarge"
            android:gravity="center"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/emailLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/emailText"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Email:"
            android:textAppearance="?android:textAppearanceLarge"
            android:gravity="center" />

        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/emailText"
            android:text=""
            android:textStyle="bold"
            android:textAppearance="?android:textAppearanceLarge"
            android:gravity="center"/>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/scoreLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/scoreText"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="Score:"
            android:textAppearance="?android:textAppearanceLarge"
            android:gravity="center" />

        <TextView
            android:id="@+id/score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/scoreText"
            android:text=""
            android:textStyle="bold"
            android:textAppearance="?android:textAppearanceLarge"
            android:gravity="center"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/idLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/idText"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="ID:"
            android:textAppearance="?android:textAppearanceLarge"
            android:gravity="center" />

        <TextView
            android:id="@+id/id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/idText"
            android:text=""
            android:textStyle="bold"
            android:textAppearance="?android:textAppearanceLarge"
            android:gravity="center"/>

    </RelativeLayout>





