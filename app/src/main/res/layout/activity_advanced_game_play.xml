<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.alex.bagofwords.AdvancedGamePlay"
    android:gravity="left"
    android:background="#AEC5CB">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/timer"
        android:paddingTop="8dp"
        android:layout_gravity="center"
        android:textSize="35dp"
        android:textColor="#ffffff"
        android:paddingBottom="2dp"
        android:textStyle="bold" />


    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:layout_marginBottom="6dp"
            android:background="#485665"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text=""
            android:id="@+id/firstBtn"
            android:layout_row="0"
            android:layout_column="0" />

        <Button
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:layout_marginBottom="6dp"
            android:background="#485665"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text=""
            android:id="@+id/secondBtn"
            android:layout_row="1"
            android:layout_column="0" />

        <Button
            android:text=""
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:layout_marginBottom="6dp"
            android:background="#485665"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:textStyle="bold"
            android:id="@+id/thirdBtn"
            android:layout_row="2"
            android:layout_column="0" />

        <Button
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:layout_marginBottom="6dp"
            android:background="#485665"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text=""
            android:id="@+id/fourthBtn"
            android:layout_row="3"
            android:layout_column="0" />

        <Button
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:layout_marginBottom="6dp"
            android:background="#485665"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text=""
            android:id="@+id/fifthBtn"
            android:layout_row="4"
            android:layout_column="0" />

        <Button
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:layout_marginBottom="6dp"
            android:background="#485665"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text=""
            android:id="@+id/sixthBtn"
            android:layout_row="5"
            android:layout_column="0" />


        <Button
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:layout_marginBottom="6dp"
            android:background="#485665"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text=""
            android:id="@+id/seventhBtn"
            android:layout_row="6"
            android:layout_column="0" />

        <Button
            android:layout_width="110dp"
            android:layout_height="28dp"
            android:id="@+id/eighthBtn"
            android:layout_row="7"
            android:text=""
            android:background="#485665"
            android:textColor="#ffffff"
            android:layout_column="0"
            android:width="165dp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal" />

    </GridLayout>

    <GridLayout
        android:id="@+id/punctuationMarks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/fullStop"
            android:layout_row="0"
            android:layout_column="0"
            android:text="."
            android:textSize="15dp"
            android:textStyle="bold"
            android:onClick="fullStopOnClick" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:text="\?"
            android:id="@+id/questionMark"
            android:layout_row="0"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_column="1"
            android:onClick="questionMarkOnClick" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="!"
            android:id="@+id/exclamationMark"
            android:layout_row="0"
            android:layout_column="2"
            android:onClick="exclamationMarkOnClick" />


    </GridLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Finish"
        android:id="@+id/finishBtn"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp" />

</LinearLayout>